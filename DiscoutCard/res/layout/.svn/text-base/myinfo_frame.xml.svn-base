<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myinfo_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backguound"
    android:orientation="vertical" >

    <include layout="@layout/title_top_bar" />

    <RelativeLayout
        android:id="@+id/card_team"
        android:layout_width="fill_parent"
        android:layout_height="70dip"
        android:background="@drawable/my_card_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="bottom"
            android:padding="10dip"
            android:textColor="#333333"
            android:textSize="20.0dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card_my"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/set_layou_height"
        android:background="@drawable/list_item_my_selector"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <ImageView
            android:id="@+id/vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/vip_my_1" />

        <TextView
            style="@style/set_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/vip"
            android:gravity="center_vertical"
            android:text="我的会员卡" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card_discount"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/set_layou_height"
        android:background="@drawable/list_item_my_selector"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <ImageView
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/discount_my_1" />

        <TextView
            style="@style/set_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/discount"
            android:gravity="center_vertical"
            android:text="我的优惠劵" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card_collect"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/set_layou_height"
        android:background="@drawable/list_item_my_selector"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <ImageView
            android:id="@+id/collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/collect_my_1" />

        <TextView
            style="@style/set_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/collect"
            android:gravity="center_vertical"
            android:text="我关注的商家" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card_new"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/set_layou_height"
        android:layout_marginTop="15dip"
        android:background="@drawable/list_item_my_selector"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <ImageView
            android:id="@+id/new_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/new_my_1" />

        <TextView
            style="@style/set_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/new_"
            android:gravity="center_vertical"
            android:text="最新消息" />

        <TextView
            android:id="@+id/menuCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/arrow_selector"
            android:background="@drawable/indicator"
            android:gravity="center"
            android:textColor="#fff"
            android:text="1"
            android:textSize="16.0dp" />

        <ImageView
            android:id="@+id/arrow_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card_new"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/set_layou_height"
        android:layout_marginTop="15dip"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_card_button"
            android:text="注册"
            android:textColor="#bbb"
            android:visibility="gone" />

        <Button
            android:id="@+id/login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/add_card_button"
            android:text="登 录"
            android:textColor="#bbb"
            android:textSize="18.0dp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>