<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/top_bg" >

    <ImageButton
        android:id="@+id/goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/back"
        android:textColor="#fff"
        android:background="@null"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/city_layou"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="20dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="茂名"
            android:textColor="#fff"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:visibility="gone"
            android:src="@drawable/arrow_down" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是会员"
            android:textColor="#fff"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/search_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/shophead_search_icon_normal" />

        <Button
            android:id="@+id/add_micro_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="发布"
            android:visibility="gone"
            android:textColor="#FFF" />

        <ImageView
            android:id="@+id/my_card_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_card_button"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/add_collet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/collet_add"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>