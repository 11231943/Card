<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->


    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.NoTitleBar">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowAnimationStyle">@style/app_theme_anim</item>
    </style>

    <!-- animation 样式 -->
    <style name="app_theme_anim" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/right_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/left_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/right_exit</item>
    </style>

    <style name="menu_button">
        <item name="android:button">@null</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="id_area_count_">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">15dip</item>
    </style>

    <style name="more_image_">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:src">@drawable/arrow_normal</item>
    </style>

    <style name="set_text">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/set_text_size</item>
    </style>

    
      <style name="indicate_text">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/indicator</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
</resources>